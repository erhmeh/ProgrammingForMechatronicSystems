cmake_minimum_required(VERSION 2.8.3)
project(controller)
find_package(catkin REQUIRED roscpp std_msgs)
message( STATUS "OpenCV Include Dir: " ${OpenCV_INCLUDE_DIRS} )
catkin_package(
  LIBRARIES drawing_tools
  )
include_directories(
  include
  ${catkin_INCLUDE_DIRS}
  ${EIGEN3_INCLUDE_DIR}
  ${OpenCV_INCLUDE_DIRS}
)


add_library(instant src/instant.cpp)

find_package(catkin REQUIRED COMPONENTS
  cv_bridge
  image_transport
  message_generation
  roscpp
  sensor_msgs
  std_msgs
)

add_definitions( -DANALYSIS=ON )

## System dependencies are found with CMake's conventions
find_package(Boost REQUIRED COMPONENTS system signals)

set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -Wno-deprecated -Wdeprecated-declarations")
set(CMAKE_CXX_FLAGS "-std=c++0x ${CMAKE_CXX_FLAGS}")

message ( STATUS " CMake C++ FLAGS ${CMAKE_CXX_FLAGS}")

find_package(OpenCV)
find_package(Eigen3 REQUIRED)

add_executable(a5_main src/a5_main.cpp)
target_link_libraries(a5_main ${catkin_LIBRARIES} instant ${OpenCV_LIBRARIES})
add_dependencies(a5_main a5_main_cpp)
